
<html>
<%- include('../../partials/head.ejs'); %>

<body class="colorm d-flex justify-content-center align-items-center text-responsive">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 order-md-1 d-flex justify-content-center mb-5">
                <a class="img-login mb-5" href="/"><img src="/image/logo2.png"> </a>
            </div>
            <div class="col-md-7 py-3 rounded d-flex justify-content-center order-md-2" style="background-color: white;">
                <main class="w-75">
                    <div class="container">
                        <h2 class="fw-bolder mb-5 text-center" style="color: #E0AAFF;">Meus Agendamentos</h2>
                    
                        <% if (cliente && cliente.mensagem) { %>
                            <p><%= cliente.mensagem %></p>
                        <% } else if (agendamentos.length > 0) { %>
                            <h2><%= cliente.nome %></h2>
                            <!-- Restante do código para exibir os agendamentos -->

                                    <% agendamentos.forEach(function(agendamento) { %>
                                        <div class="card mt-2"  style="border: 2px solid #E0AAFF;">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <strong>Serviço:</strong> <%= agendamento.servico %>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <strong>Data:</strong> <%= agendamento.data %>
                                                    </div>
                                                    <div class="col-lg-6 mt">
                                                        <strong>Hora:</strong> <%= agendamento.hora %>
                                                    </div>
                                                </div>
                                            </div>
                                          </div>
                                    <% }); %>
                        <% } else { %>
                            <p>O cliente não possui agendamentos.</p>
                        <% } %>
                       
                    </div>
                </main>
            </div>
        </div>
        <div class="row mt-5 mb-auto" style="font-size: 1vw;">
            <div class="col-12">
                <p class="text-center mt-5"> <img src="/image/copyright.png" alt=""> 2023 Espaço Ana. Todos os direitos reservados</p>
            </div>
        </div>
    </div>
</body>
</html>
